<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_forget_password"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/homeimage"
    tools:context="com.seals.shubham.myapplication.ForgetPassword">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#79454333"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="Forget Password ?"
                android:textSize="22dp"
                android:textColor="#ffffffff"
                android:id="@+id/frgtMess"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/frgtUsr"
                android:layout_alignStart="@+id/frgtUsr"
                android:layout_marginTop="41dp"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Registration No"
                android:padding="13dp"
                android:ems="10"
                android:id="@+id/frgtRegId"
                android:background="@drawable/shape"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/btnBck"
                android:background="#6600dc00"
                android:layout_below="@+id/frgtUsr"
                android:layout_alignLeft="@+id/frgtUsr"
                android:layout_alignStart="@+id/frgtUsr"
                android:layout_marginTop="45dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/shapred"
                android:id="@+id/btnSubmit"
                android:layout_alignTop="@+id/btnBck"
                android:layout_alignRight="@+id/frgtUsr"
                android:layout_alignEnd="@+id/frgtUsr"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter Your Registration No"
                android:id="@+id/frgtTextMess"
                android:textSize="16dp"
                android:textColor="#ffcd98"
                android:layout_above="@+id/frgtUsr" android:layout_alignStart="@+id/frgtUsr"
                android:layout_marginBottom="26dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
